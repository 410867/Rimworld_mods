<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Simple Bulk Cooking</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>*/RecipeDef[defName="MakePemmicanBulk"]/recipeUsers</xpath>
					<value>
						<li>GCS_Stove</li>
						<li>GCS_advStove</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>*/RecipeDef[defName="CookMealSimpleBulk"]/recipeUsers</xpath>
					<value>
						<li>GCS_Stove</li>
						<li>GCS_advStove</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>*/RecipeDef[defName="CookMealFineBulk"]/recipeUsers</xpath>
					<value>
						<li>GCS_Stove</li>
						<li>GCS_advStove</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>*/RecipeDef[defName="CookMealLavishBulk"]/recipeUsers</xpath>
					<value>
						<li>GCS_Stove</li>
						<li>GCS_advStove</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>*/RecipeDef[defName="CookMealSurvivalBulk"]/recipeUsers</xpath>
					<value>
						<li>GCS_Stove</li>
						<li>GCS_advStove</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>