<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef ParentName="DiseaseBase">
    <defName>PLAHF_blindingpoison</defName>
    <label>blinding Poison</label>
	<defaultLabelColor>(0.2, 0.7, 0.2)</defaultLabelColor>
	<makesSickThought>true</makesSickThought>
    <scenarioCanAdd>true</scenarioCanAdd>
    <taleOnVisible>ToxicityRevealed</taleOnVisible>
	<tendable>true</tendable>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <baseTendDurationHours>12</baseTendDurationHours>
        <severityPerDayTended>-0.6</severityPerDayTended>
      </li>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>-0.08</severityPerDayNotImmune>
        <immunityPerDaySick>0.6</immunityPerDaySick>
        <severityPerDayImmune>-0.60</severityPerDayImmune>
        <immunityPerDayNotSick>-0.40</immunityPerDayNotSick>
      </li>
    </comps>
    <stages>
      <li>
        <label>minor</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <minSeverity>0.15</minSeverity>
        <label>minor</label>
        <capMods>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.30</minSeverity>
        <label>moderate</label>
        <capMods>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.2</offset>
          </li>
		  <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.45</minSeverity>
        <label>severe</label>
        <capMods>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.4</offset>
          </li>
		  <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.60</minSeverity>
        <label>extreme</label>
        <capMods>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.6</offset>
          </li>
		  <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
	  <li>
        <minSeverity>0.90</minSeverity>
        <label>Neutralize</label>
		<vomitMtbDays>0.3</vomitMtbDays>
		<capMods>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.9</offset>
          </li>
		  <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
