<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<ThingDef ParentName="BuildingBase">
    <defName>FP_Meteor_Caller_Building</defName>
    <label>meteor caller</label>
    <description>Only the most reckless individual would dare attempt to somehow pull celestial objects out of the sky… cue Ikit Claw. The time it takes is somewhat random, and depends on researcher skill.</description>
    
	<graphicData>
      <texPath>Things/Building/Misc/FP_Warpstone_Tractor_Beam</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(4, 4)</drawSize>
      <shadowData>
        <volume>(1.4, 0.4, 1.4)</volume>
        <offset>(0,0,-0.1)</offset>
      </shadowData>
    </graphicData>
    <costList>
      <Steel>130</Steel>
	  <Silver>13</Silver>
	  <Jade>13</Jade>
    </costList>
    <comps>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Flickable"/>
      <!--<li Class="CompProperties_LongRangeMineralScanner"/>-->
	  <li Class="FP_Warp_TB.CompProperties_FP_WarpstoneTracterBeam"/>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>130</MaxHitPoints>
      <WorkToBuild>13000</WorkToBuild>
      <Flammability>1.3</Flammability>
    </statBases>
    <fillPercent>0.13</fillPercent>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <pathCost>13</pathCost>
    <designationCategory>Misc</designationCategory>
    <rotatable>true</rotatable>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0,0,2)</interactionCellOffset>
    <interactionCellIcon>DiningChair</interactionCellIcon>
    <interactionCellIconReverse>true</interactionCellIconReverse>
    <defaultPlacingRot>South</defaultPlacingRot>
    <canOverlapZones>false</canOverlapZones>
    <size>(3, 3)</size>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <researchPrerequisites>
      <li>LongRangeMineralScanner</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
  </ThingDef>
  

</Defs>
